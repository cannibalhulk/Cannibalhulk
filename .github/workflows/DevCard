name: DevCard

permissions:
  contents: write

on:
  workflow_dispatch:
  push:
    branches:
      - main
  schedule:
    - cron: "0 0 * * *"

jobs:
  devcard:
    runs-on: ubuntu-latest
    steps:
      - name: devcard
        uses: Cannibalhulk/action-devcard@1.0.0
        with:
          devcard_id: ${{ secrets.DEVCARD_ID }}
